<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.ShareRide" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/blue_dark</item>
        <item name="colorPrimaryVariant">@color/blue_dark</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/blue_dark</item>
        <item name="colorSecondaryVariant">@color/blue_dark</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
    </style>

    <style name="LoginTheme" parent="FirebaseUI">

        <!-- Background color of the login dialog -->
        <item name="android:windowBackground">@color/white</item>
        <item name="colorControlNormal">@color/black</item>
        <item name="android:textColorHint">@color/black</item>
        <!-- Underline and Hint of the edittext -->
        <item name="colorControlActivated">@color/blue</item>

        <!-- Top bar color of the login dialog -->
        <item name="colorPrimary">@color/blue_dark</item>
        <item name="colorPrimaryDark">@color/blue_dark</item>

        <!-- Typed in text color into the edittext -->
        <item name="android:textColorPrimary">@color/black</item>

        <item name="android:textColor">@color/black</item>

        <item name="android:textColorLink">@color/blue_dark</item>

        <!-- Remove the action bar from the login dialog -->
        <item name="windowActionBar">true</item>
        <item name="windowNoTitle">true</item>

    </style>

    <!-- Custom styling of the AlertDialog. -->
    <style name="AlertDialogStyles" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:colorAccent">@color/blue</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textColorPrimary">@color/green</item>
        <item name="android:windowBackground">@color/blue</item>

        <!-- Styling the OK (positive) and Cancel (negative) buttons of the AlertDialog -->
        <item name="buttonBarNegativeButtonStyle">@style/NegativeButtonStyle</item>
        <item name="buttonBarPositiveButtonStyle">@style/PositiveButtonStyle</item>
        <item name="buttonBarNeutralButtonStyle">@style/NeutralButtonStyle</item>


        <!-- Styling the size of the AlertDialog in terms of the screen size -->
        <item name="windowMinWidthMajor">70%</item>
        <item name="windowMinWidthMinor">70%</item>
    </style>

    <style name="NegativeButtonStyle" parent="Widget.AppCompat.Button">
        <item name="android:textColor">@color/red</item>
    </style>

    <style name="PositiveButtonStyle" parent="Widget.AppCompat.Button">
        <item name="android:textColor">@color/red</item>
    </style>

    <style name="NeutralButtonStyle" parent="Widget.AppCompat.Button">
        <item name="android:textColor">@color/red</item>
    </style>

</resources>